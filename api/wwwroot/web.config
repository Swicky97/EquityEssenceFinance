<configuration>
  <system.webServer>
    <rewrite>
      <rules>
        <!-- Redirect all routes to index.html (except for API routes) -->
        <rule name="React Routes" stopProcessing="true">
          <match url="^(?!api/)(.*)" />
          <action type="Rewrite" url="/" />
        </rule>
      </rules>
    </rewrite>
  </system.webServer>
</configuration>
